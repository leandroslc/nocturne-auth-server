@page "/manage/new-local-account"
@model SetPasswordModel
@inject IViewLocalizer localizer;

@{
    var title = localizer["Set password"];

    ViewData[KnownViewData.Title] = title;
    ViewData[KnownViewData.PageGroup] = ManageNavPages.ChangePassword;
}

<div class="page">
    <div class="page-heading"></div>
    <div class="page-container">
        <div class="page-card">
            <div class="page-card-header">
                <div class="page-card-title">@title</div>
            </div>
            <div class="page-card-content col-md-8">
                <p>
                    @localizer["You do not have a local username/password. Add a local account so you can log in without an external login"].
                </p>

                <form id="set-password-form" method="post">
                    <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>

                    <div class="form-group">
                        <label class="form-label" asp-for="Input.NewPassword">@localizer["New password"]</label>
                        <input class="form-control" asp-for="Input.NewPassword" />
                        <span class="d-block form-text text-danger" asp-validation-for="Input.NewPassword"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-label" asp-for="Input.ConfirmPassword">@localizer["Confirm new password"]</label>
                        <input class="form-control" asp-for="Input.ConfirmPassword" />
                        <span class="d-block form-text text-danger" asp-validation-for="Input.ConfirmPassword"></span>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-primary" type="submit">@localizer["Set password"]</button>

                        <div class="spinner-border spinner-border-sm text-primary" role="status" id="loading" style="display: none;">
                            <span class="sr-only">@localizer["Loading..."]</span>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

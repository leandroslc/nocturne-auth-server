@page "/account/password-reset/complete"
@model ResetPasswordConfirmationModel
@inject SignInManager<ApplicationUser> signInManager
@inject IViewLocalizer localizer

@{
    var title = localizer["Reset password"];

    ViewData[KnownViewData.Title] = title;
}

<h1 class="login-content-title">@title</h1>

<div class="login-form-box">
    <div class="alert alert-success" role="alert">
        @localizer["Your password has been reset"]
    </div>

    <div class="form-group mt-5">
        @if (signInManager.IsSignedIn(User))
        {
            <a class="btn btn-primary" asp-route="@RouteNames.Home">
                <span class="bi-arrow-left" aria-hidden="true"></span>
                @localizer["Back to home page"]
            </a>
        }
        else
        {
            <a class="btn btn-primary" asp-page="./Login">
                <span class="bi-box-arrow-in-right" aria-hidden="true"></span>
                @localizer["Log in"]
            </a>
        }
    </div>
</div>

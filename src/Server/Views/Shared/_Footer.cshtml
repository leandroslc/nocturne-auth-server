@inject IViewLocalizer localizer;
@inject IOptions<ServerApplicationOptions> ApplicationOptions;

@{
    var applicationOptions = ApplicationOptions.Value;
}

<div class="layout-footer footer">
    <ul class="footer-list ml-auto">
        @if (applicationOptions.HasPrivacyPolicyUrl)
        {
            <li class="footer-list-item">
                <a class="footer-link" href="@applicationOptions.PrivacyPolicyUrl">@localizer["Privacy policy"]</a>
            </li>
        }
        <li class="footer-list-item">@applicationOptions.CompanyName</li>
    </ul>
</div>

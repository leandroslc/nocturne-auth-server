@inject IViewLocalizer localizer
@model ViewApplicationPermissionItem

<div class="modal-header">
    <h5 class="modal-title" id="permission-modal-label">@localizer["Permission details"]</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="mb-3">
        <label class="form-label">@localizer["Name"]</label>
        <input class="form-control-plaintext" readonly value="@Model.Name" />
    </div>

    <div class="mb-3">
        <label class="form-label">@localizer["Description"]</label>
        <span class="form-control-plaintext" readonly>@Model.Description</span>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-primary" data-dismiss="modal">@localizer["Close"]</button>
</div>

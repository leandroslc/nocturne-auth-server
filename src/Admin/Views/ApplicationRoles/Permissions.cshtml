@model ViewApplicationRoleResult
@inject IViewLocalizer localizer

<div class="row mb-3">
    <div class="col d-flex justify-content-end">
        <button class="btn btn-outline-success" id="add-permissions-button" type="button" data-permission-action="@Url.RouteUrl(RouteNames.RolePermissionsAdd, new { roleId = Model.Role.Id })">
            <span class="bi-plus" aria-hidden="true"></span>
            <span>@localizer["Assign permissions"]</span>
        </button>
    </div>
</div>

<form class="form-inline justify-content-end mb-3" id="search-permissions-form" loading="loading-permissions" loading-hide="search-permissions-results"></form>

<div class="row mb-3">
    <div class="col">
        <div id="search-permissions-results"></div>
        <div class="d-flex justify-content-center">
            <div class="spinner-border text-primary" role="status" id="loading-permissions" style="display: none;">
                <span class="sr-only">@localizer["Loading..."]</span>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="permission-modal" tabindex="-1" role="dialog" aria-labelledby="permission-modal-label" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content"></div>
  </div>
</div>

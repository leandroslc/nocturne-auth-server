@inject IViewLocalizer localizer;
@inject IOptions<WebApplicationOptions> applicationOptions;

@{
    var currentApplicationOptions = applicationOptions.Value;
}

<div class="layout-footer footer">
    <ul class="footer-list ml-auto">
        @if (currentApplicationOptions.HasPrivacyPolicyUrl)
        {
            <li class="footer-list-item">
                <a class="footer-link" href="@currentApplicationOptions.PrivacyPolicyUrl">@localizer["Privacy policy"]</a>
            </li>
        }
        <li class="footer-list-item">@currentApplicationOptions.CompanyName</li>
    </ul>
</div>
